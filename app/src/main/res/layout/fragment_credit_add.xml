<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.add.CreditAddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toolbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Заявка на кредит"
            android:textColor="@color/black_text_color"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E4E9"
            app:layout_constraintTop_toBottomOf="@id/toolbar_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/send_btn"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/farmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hint="Введите ФИО или ИНН"
                app:title="ФИО/ИНН"
                app:type="drop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Рейтинг"
                android:textColor="@color/text_bold_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_bold_color"
                android:textSize="66sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Кредитный потенциал"
                android:textColor="@color/text_bold_color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/potential_counter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_bold_color"
                android:textSize="66sp"
                android:textStyle="bold" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hint="Выбиретие цель"
                app:title="Цель"
                app:type="drop" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/comments_of_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hint="Напишите комментарий"
                app:title="Комментарий к цели"
                app:type="field" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hint="Выберите продукт"
                app:title="Продукт"
                app:type="drop" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:helper="Зависит от категории продукта"
                app:hint="Выберите категорию"
                app:title="Категория"
                app:type="drop" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:hint="Выберите срок кредита"
                app:title="Срок"
                app:type="drop" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/date_of_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:helper="Дата ежемесячной оплаты"
                app:hint="Введите число для оплаты"
                app:title="День для выплат"
                app:type="field" />

            <pro.breez.bfsut.custom.view.AddCreditEditText
                android:id="@+id/sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:helper="Процент (в год)"
                app:hint="Введите сумму кредита"
                app:title="Сумма"
                app:type="field" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_base_button"
        android:text="@string/send"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>