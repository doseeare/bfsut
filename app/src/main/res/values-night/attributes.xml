<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEditText">
        <attr name="title" format="string" />
        <attr name="hint" format="string" />
    </declare-styleable>

    <declare-styleable name="RegistrationEditText" parent="CustomEditText">
        <attr name="title" />
        <attr name="hint" />
        <attr name="error" format="string" />
        <attr name="is_password" format="boolean" />
    </declare-styleable>


    <declare-styleable name="CustomDropDownEditText" parent="CustomEditText">
        <attr name="title" />
        <attr name="hint" />
        <attr name="helper" format="string" />
        <attr name="icon_end" format="reference" />
        <attr name="important" format="boolean" />
        <attr name="type">
            <flag name="field" value="0" />
            <flag name="drop" value="1" />
            <flag name="none" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="HomePagePanelView">
        <attr name="is_day" format="boolean" />
    </declare-styleable>


    <declare-styleable name="AddMenuView">
        <attr name="icon" format="reference" />
        <attr name="label" format="string" />
    </declare-styleable>

    <declare-styleable name="ProfileTextView" parent="CustomEditText">
        <attr name="top_title" format="string" />
        <attr name="sub_title" format="string" />
    </declare-styleable>

    <declare-styleable name="SelectableButton">
        <attr name="button_image" format="reference" />
        <attr name="button_text" format="string" />
    </declare-styleable>

    <declare-styleable name="Toolbar">
        <attr name="toolbarLabel" format="string" />
        <attr name="option_img" format="reference" />
    </declare-styleable>

    <declare-styleable name="ButtonDrawableView">
        <attr name="text" format="string" />
        <attr name="drawable_end" format="reference" />
        <attr name="drawable_start" format="reference" />
        <attr name="button_background" format="reference" />
        <attr name="text_color" format="reference" />
        <attr name="text_size" format="integer" />
        <attr name="text_style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BaseMaterialButtonView">
        <attr name="setBackgroundMaterialButton" format="reference|color" />
        <attr name="textColor" format="reference" />
        <attr name="textSize" format="float" />
    </declare-styleable>


</resources>