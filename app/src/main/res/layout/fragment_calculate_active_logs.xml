<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.active_logs.CalculateActiveLogsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toolbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_margins"
            android:text="Запись сбора молока"
            android:textColor="@color/black_text_color"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_active_span"
            android:paddingLeft="6sp"
            android:text="активный"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/toolbar_title"
            app:layout_constraintStart_toStartOf="@id/toolbar_title"
            app:layout_constraintTop_toBottomOf="@id/toolbar_title" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_margins"
            android:background="#E2E4E9"
            app:layout_constraintTop_toBottomOf="@id/status_tv" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_margins"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margins"
        android:text="Сбор молока у \n Акылбека Асанова"
        android:textColor="@color/text_bold_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/name_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/day_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margins"
            android:background="@drawable/bg_auth_edittext_default"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/name_tv">

            <TextView
                android:id="@+id/day_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margins"
                android:layout_marginTop="8dp"
                android:text="Утром"
                android:textColor="@color/text_bold_color"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/day_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margins"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:maxLines="1"
                android:text="4л"
                android:textColor="@color/text_bold_color"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/day_title_tv"
                tools:hint="Ваш логин" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/evening_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_auth_edittext_default"
            android:layout_marginHorizontal="@dimen/default_margins"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/name_tv">

            <TextView
                android:id="@+id/evening_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margins"
                android:layout_marginTop="8dp"
                android:text="Вечером"
                android:textColor="@color/text_bold_color"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margins"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="8dp"
                android:background="@null"
                android:maxLines="1"
                android:text="4л"
                android:textColor="@color/text_bold_color"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/evening_title_tv"
                tools:hint="Ваш логин" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>